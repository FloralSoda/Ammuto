{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Unit Test] Ammuto Lib",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=ammuto-lib"
				],
				"filter": {
					"name": "ammuto-lib",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Unit Test] Ammuto CLI",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=ammuto-cli",
					"--package=ammuto-cli"
				],
				"filter": {
					"name": "ammuto-cli",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Debug] UI Development",
			"cargo": {
			  "args": [
				"build",
				"--manifest-path=./ammuto-client/src-tauri/Cargo.toml",
				"--no-default-features"
			  ]
			},
			// task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
			"preLaunchTask": "ui:dev",
			"cwd": "${workspaceFolder}"
		 },
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Debug] UI Production",
			"cargo": {
			  "args": ["build", "--release", "--manifest-path=./ammuto-client/src-tauri/Cargo.toml"]
			},
			// task for the `beforeBuildCommand` if used, must be configured in `.vscode/tasks.json`
			"preLaunchTask": "ui:build",
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "[Debug] Ammuto CLI",
			"cargo": {
				"args": [
					"build",
					"--bin=ammuto-cli",
					"--package=ammuto-cli"
				],
				"filter": {
					"name": "ammuto-cli",
					"kind": "bin"
				}
			},
			
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}
